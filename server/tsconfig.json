{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES6"],
    "module": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["./api/*.ts"],
  "exclude": ["./node_modules"],
  "lib": ["esnext"],
  "ts-node": {
    "esm": true
  }
}
